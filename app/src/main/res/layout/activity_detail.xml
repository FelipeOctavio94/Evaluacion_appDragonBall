<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/img_gohan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gohan"
        android:scaleType="center"
        />

    <RelativeLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:id="@+id/name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gohan"
            android:paddingBottom="50sp"
            android:textSize="20dp"

            />

        <TextView
            android:id="@+id/gender_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textSize="20dp"
            android:layout_toRightOf="@id/name_detail"

            />

        <TextView
            android:id="@+id/planet_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tierra"
            android:textSize="20dp"
            android:layout_toRightOf="@id/gender_detail"
            />

        <TextView
            android:id="@+id/species_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humano"
            android:textSize="20dp"
            android:layout_toRightOf="@id/planet_detail"
            />


    </RelativeLayout>

</RelativeLayout>