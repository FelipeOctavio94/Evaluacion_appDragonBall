<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:paddingTop="90sp"
    android:layout_height="match_parent"
    tools:context=".CreatorActivity"
    android:background="#cd8800">


            <LinearLayout
                android:id="@+id/creator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent"
                android:paddingLeft="80dp"

                >


            <TextView
                    android:id="@+id/creators"
                    android:fontFamily="@font/saiyansans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creadores:"

                    android:paddingRight="10sp"
                    android:textSize="50sp"
                    android:textColor="#ffffff"

                />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="2dp"
                    android:fontFamily="@font/saiyansans"
                    android:paddingTop="80dp"
                    android:text="@string/cristobal_canales"
                    android:textColor="#ffffff"
                    android:textSize="50sp"
                    android:layout_toEndOf="@id/creators"/>

                <TextView
                    android:id="@+id/name2"
                    android:textColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="80dp"
                    android:layout_marginVertical="5dp"
                    android:text="Felipe carreÃ±o"
                    android:fontFamily="@font/saiyansans"
                    android:textSize="50sp"


                />



            </LinearLayout>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/creator"
        tools:ignore="ContentDescription"
        android:layout_below="@id/creator"

        />

</RelativeLayout>